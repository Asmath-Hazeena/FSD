.card-container {
    perspective: 1000px;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
    background: linear-gradient(to right, #ff9933, #ffffff, #138808);
  }
  
  /* Card Structure */
  .card {
    width: 400px;
    height: 260px;
    position: relative;
    transform-style: preserve-3d;
    transition: transform 0.6s ease-in-out;
    cursor: pointer;
  }
  
  /* Flip Effect */
  .card.flipped {
    transform: rotateY(180deg);
  }
  
  /* Front & Back Common Styles */
  .card-front, .card-back {
    width: 90%;
    height: 90%;
    position: absolute;
    backface-visibility: hidden;
    border-radius: 10px;
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    font-family: Arial, sans-serif;
    padding: 15px;
  }
  
  /* Front Side */
  .card-front {
    background: linear-gradient( 180deg, #ff9933, #ffffff, #138808);
    color: #000;
    border: 2px solid #5F99AE;
  }
  
  /* Aadhaar Card Content */
  .card-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }
  
  .card-details {
    text-align: left;
    font-size: 14px;
  }
  
  .aadhaar-img {
    width: 100px;
    height: 120px;
    margin-left: 15px;
    border-radius: 5px;
